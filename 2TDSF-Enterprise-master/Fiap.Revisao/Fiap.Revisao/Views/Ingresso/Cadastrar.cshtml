@model Fiap.Revisao.Models.Ingresso
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Ingresso</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(i => i.Cadeira)
        @Html.TextBoxFor(i => i.Cadeira, new { @class = "form-control" })        
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.Data)
        @Html.TextBoxFor(i => i.Data, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.Setor)
        @Html.DropDownListFor(i => i.SetorId, ViewBag.setores as SelectList,
               "Selecione", new { @class = "form-control" })
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

