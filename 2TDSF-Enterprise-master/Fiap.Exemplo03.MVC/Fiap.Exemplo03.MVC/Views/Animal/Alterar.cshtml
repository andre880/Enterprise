@model Fiap.Exemplo03.MVC.Models.Animal
@{
    ViewBag.Title = "Alterar";
}

<h2>Alterar Animal</h2>

@using (Html.BeginForm())
{    
    <div class="form-group">
        @Html.LabelFor(a => a.Nome)
        @Html.TextBoxFor(a => a.Nome, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.DataNascimento)
        @Html.TextBoxFor(a => a.DataNascimento, "{0:dd/MM/yyyy}" , new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Especie)
        @Html.TextBoxFor(a => a.Especie, new { @class = "form-control"})
    </div>
    <input type="submit" value="Alterar" class="btn btn-primary" />
    @Html.ActionLink("Cancelar","Listar",
                    "Animal",new { @class = "btn btn-default"})
}
