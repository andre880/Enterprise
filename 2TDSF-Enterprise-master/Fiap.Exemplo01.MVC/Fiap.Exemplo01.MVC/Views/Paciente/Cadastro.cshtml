
@{
    ViewBag.Title = "Cadastro";
}

<h2>Cadastro</h2>
<form action="/Paciente/Gravar" method="post">
    <div class="form-group">
        <label for="id-nome">Nome</label>
        <input type="text" name="nome" id="id-nome" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-data">Data Nascimento</label>
        <input type="text" name="data" id="id-data" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-nr">Número Convênio</label>
        <input type="text" name="convenio" id="id-nr" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-tipo">Tipo Sanguineo</label>
        <select name="tipo" id="id-tipo" class="form-control">
            <option>A</option>
            <option>B</option>
            <option>O</option>
            <option>AB</option>
        </select>
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
</form>

