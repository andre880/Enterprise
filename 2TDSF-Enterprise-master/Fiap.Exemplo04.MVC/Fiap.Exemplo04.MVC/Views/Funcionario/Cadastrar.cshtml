@model Fiap.Exemplo04.MVC.Models.Funcionario
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Funcionário</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(c => c.Nome)
        @Html.TextBoxFor(c => c.Nome, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.DataRegistro)
        @Html.TextBoxFor(c => c.DataRegistro, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.ContaSalario.Banco)
        @Html.TextBoxFor(c => c.ContaSalario.Banco, new { @class ="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.ContaSalario.Agencia)
        @Html.TextBoxFor(c => c.ContaSalario.Agencia, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.ContaSalario.Numero)
        @Html.TextBoxFor(c => c.ContaSalario.Numero, new { @class = "form-control" })
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

