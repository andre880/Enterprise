@model Fiap.Exemplo04.MVC.Models.Dependente
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Dependente</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(c => c.Nome)
        @Html.TextBoxFor(c => c.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Funcionario)
        @Html.DropDownListFor(c => c.FuncionarioId, ViewBag.funcionarios as SelectList, "Selecione", new { @class = "form-control" })
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}